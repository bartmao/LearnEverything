    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceRoot}/VOD/vodsrv",
            "cwd": "${workspaceRoot}/VOD",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/out/*.js",
                "${workspaceRoot}/*.ts",
                "${workspaceRoot}/*.js"
            ],
            "args": [
                "-s","3002"
            ]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Process",
            "port": 5858
        }
    ]
}